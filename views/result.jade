extends layout

block header
  title SMS Helper | Result
block content
 h1

 form(action="/resend/#{id}" method="post" class="form-horizontal well")
  div(class="form-group")
   label(for="numbers" class="col-sm-2 control-label") Message
   div(class="col-sm-10")
    textarea(class="form-control" rows="3" id="message" name="message" disabled="disabled") #{message}
  div(class="form-group")
   label(for="username" class="col-sm-2 control-label") Username
   div(class="col-sm-10")
    input(type="text" class="form-control" id="username" name="username")
  div(class="form-group")
   label(for="password" class="col-sm-2 control-label") Password
   div(class="col-sm-10")
    input(type="text" class="form-control" id="password" name="password")
  div(class="form-group")
   div(class="col-sm-offset-2 col-sm-10 btn-toolbar")
    button(type="submit" class="btn btn-danger") Resend
    a(class="btn btn-success" href="download") Download

  div(class="form-group")
   label(for="numbers" class="col-sm-2 control-label") Results
   div(class="col-sm-offset-2 col-sm-10")
    table(class="table")
      thead
        tr
          each cell in header
            th #{cell}
      tbody
        each row in rows
          tr
            each cell in row
              td #{cell}


block footer
