extends layout

block header
  title SMS Helper | Result
block content
 h1 SMS Helper
 
 form(action="/resend/#{channel._id}" method="post" class="form-horizontal well")
  div(class="form-group")
   label(for="numbers" class="col-sm-2 control-label") Message
   div(class="col-sm-10")
    textarea(class="form-control" rows="3" id="message" name="message") #{channel.message}
  div(class="form-group")
   label(for="username" class="col-sm-2 control-label") Username
   div(class="col-sm-10")
    input(type="text" class="form-control" id="username" name="username")
  div(class="form-group")
   label(for="password" class="col-sm-2 control-label") Password
   div(class="col-sm-10")
    input(type="text" class="form-control" id="password" name="password")
  div(class="form-group")
   div(class="col-sm-offset-2 col-sm-10")
    button(type="submit" class="btn btn-primary") Resend
  div(class="form-group")
   label(for="numbers" class="col-sm-2 control-label") Results
   div(class="col-sm-offset-2 col-sm-10")
    table(class="table")
      thead
        tr
          th Fr√•n
          th Namn
          th Efternamn
          th Personnummer
          th Svar
          th SMS Status
          th Skickat
          th Mottaget
      tbody
        each reply in replies
          tr
            td #{reply.from}
            td #{reply.fromFirstName}
            td #{reply.fromLastName}
            td #{reply.fromPNr}
            td #{reply.message}
            td #{reply.status}
            td #{reply.sent}
            td #{reply.received}
       

