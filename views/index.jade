extends layout

block header
  title SMS Helper | Send

block content
 h1

 form(action="send" method="post" class="form-horizontal well" role="form" enctype="multipart/form-data")
  div(class="form-group")
   label(for="username" class="col-sm-2 control-label") Username
   div(class="col-sm-10")
    input(type="text" class="form-control" id="username" name="username")
  div(class="form-group")
   label(for="password" class="col-sm-2 control-label") Password
   div(class="col-sm-10")
    input(type="text" class="form-control" id="password" name="password")
  div(class="form-group")
   label(for="from" class="col-sm-2 control-label") From
   div(class="col-sm-10")
    input(type="text" class="form-control" id="from" name="from" placeholder="Leave empty and a number will be created")
  div(class="form-group")
   label(for="message" class="col-sm-2 control-label") Message
   div(class="col-sm-10")
    textarea(class="form-control" rows="3" id="message" name="message")
  div(class="form-group")
   label(for="members" class="col-sm-2 control-label") Members list
   div(class="col-sm-10")
    input(type="file" id="members" name="members")
    p(class="help-block") Excel document with member list, first row with column names. Column with header 'number' will be used for telephone number.

  div(class="form-group")
   div(class="col-sm-offset-2 col-sm-10")
    button(type="submit" class="btn btn-primary") Send


block footer
